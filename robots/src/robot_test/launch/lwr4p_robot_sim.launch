<?xml version="1.0"?>
<launch>

  <arg name="robot_config" default="$(find robot_test)/config/lwr4p_robot_sim.yaml" />

  <rosparam command="load" file="$(arg robot_config)" />

  <param name="robot_description" command="$(find xacro)/xacro.py '$(find robot_sim)/urdf/lwr_robot.xacro'" />
  <include file="$(find robot_sim)/launch/common.launch" />

  <node name="lwr4p_robot_sim_node"
        pkg="robot_test"
        type="lwr4p_robot_sim"
        required="true" respawn="false" cwd="node" output="screen">

        <rosparam>
          <!-- j0, j1, j2, j3, j4, j5, j6 -->
          q1: [-0.46, 0.58, 0.28, -1.4, 0, -0.25, 1.27]
          q2: [2.1, 0.92, -0.24, -1.38, 0.03, -1.51, -1.42]
          time_duration: 4.5 <!-- duration to move from q1 to q2 and vice versa -->
        </rosparam>

  </node>

</launch>
